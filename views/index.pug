extends ./templates/layout.pug

block search 
    include ./templates/search.pug

mixin books(data) 
    div.post
        a(href="/book/"+data.ISBN): img(src= data.image)
        br
        br
        strong #{data.title}
        br 
        small #{data.authors}

block content
    div.posts-main
        div.posts-container#books

            h1(style="text-align:center;") Available Books
            div#grid
                div#posts
                    //- div.post
                    //-     a(href="/book/doodling"): img(src="/img/mainpage/WS_Doodling.jpg")
                    //-     br 
                    //-     br
                    //-     strong Title
                    //-     br
                    //-     small Author
                    if data
                        each val, index in data 
                            +books(val)
                    else
                        h2 There seems to be nothing here. Try searching again?

block scripts
    script(src="js/jquery-ui-1.10.4.custom.min.js" type="text/javascript")
    script(src="js/masonry.js")
    script(src="js/get-shit-done.js")
    script(src="js/index.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/masonry/3.1.5/masonry.pkgd.min.js")      